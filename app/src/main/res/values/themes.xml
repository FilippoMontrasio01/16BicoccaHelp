<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BicoccaHelp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_red</item>

    </style>

    <style name="Theme.BicoccaHelp" parent="Base.Theme.BicoccaHelp">

        <item name="android:statusBarColor">@color/dark_red</item>
        <item name="android:navigationBarColor">@color/light_gray</item>


    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomNavigationThemeCustom">
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="itemTextAppearanceInactive">?attr/textAppearanceCaption</item>
        <item name="itemTextAppearanceActive">?attr/textAppearanceCaption</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="colored_checkbox" parent="Theme.AppCompat.Light">
        <!-- SELECTED CHECKBOX COLOR-->
        <item name="colorAccent">@color/dark_red</item>
        <!-- DEFAULT/UNSELECTED CHECBOX COLOR-->
        <item name="android:textColorSecondary">@color/dark_gray</item>
    </style>

    <style name="Theme.BicoccaHelp.Light.FullscreenDialog" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_red</item>
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Colore della barra in alto -->

        <!-- Colore del calendario -->
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Colore di sfondo del DatePicker -->
        <item name="android:background">@color/white</item>
    </style>
</resources>