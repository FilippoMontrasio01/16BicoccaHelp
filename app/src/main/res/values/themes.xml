<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BicoccaHelp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_red</item>

    </style>

    <style name="Theme.BicoccaHelp" parent="Base.Theme.BicoccaHelp">


            <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>


    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="TransparentDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="colored_checkbox" parent="Theme.AppCompat.Light">
        <!-- SELECTED CHECKBOX COLOR-->
        <item name="colorAccent">@color/dark_red</item>
        <!-- DEFAULT/UNSELECTED CHECBOX COLOR-->
        <item name="android:textColorSecondary">@color/dark_gray</item>
    </style>

    <style name="Theme.BicoccaHelp.Light.FullscreenDialog" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_red</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Colore di sfondo del DatePicker -->
        <item name="colorAccent">@color/dark_red</item>

        <item name="colorPrimary">@color/dark_red</item>
        <item name="android:textColorSecondary">@color/dark_red</item>
        <item name="cornerSize">16dp</item>
        <item name="android:calendarTextColor">@color/dark_red</item>

        <item name="android:buttonBarPositiveButtonStyle">@style/AppTheme.Alert.Button.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AppTheme.Alert.Button.Negative</item>
    </style>

    <style name="AppTheme.Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/dark_red</item>
    </style>

    <style name="AppTheme.Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/dark_red</item>
    </style>
</resources>