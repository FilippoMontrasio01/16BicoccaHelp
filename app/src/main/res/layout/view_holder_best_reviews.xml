<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ViewHolderBestReview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="300dp"
    android:layout_height="140dp"
    android:background="@drawable/nav_bar_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/TutorCardView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        >

        <ImageView
            android:id="@+id/TutorImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/BestReviewRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp">

        <LinearLayout
            android:id="@+id/BestReviewLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TutorNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text=""
                android:textColor="@color/dark_gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/TutorEmailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text=""
                android:textColor="@color/philippine_gray" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/BookLessonButton"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/toggle_button_background"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/book_now"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/TutorReviewTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/TutorReviewImageView"
            android:fontFamily="@font/lato_bold"
            android:layout_marginTop="10dp"
            android:text=""
            android:textSize="17sp"
            android:textColor="@color/philippine_gray" />

        <ImageView
            android:id="@+id/TutorReviewImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/star_review"
            />

    </RelativeLayout>
</LinearLayout>