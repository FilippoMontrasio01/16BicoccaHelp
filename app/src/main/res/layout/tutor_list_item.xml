<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:background="@color/light_gray">

    <androidx.cardview.widget.CardView
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="50dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/tutorListItemLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:paddingHorizontal="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/tutorListReview"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tutorListItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/areaIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    />

                <TextView
                    android:id="@+id/tutorListItemCorsoDiStudi"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/philippine_gray"
                    android:text=""
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>



        <TextView
            android:id="@+id/tutorListReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/star_image_review"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text=""
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/philippine_gray"/>

        <ImageView
            android:id="@+id/star_image_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            />

    </RelativeLayout>

</LinearLayout>